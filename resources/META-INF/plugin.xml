<idea-plugin>
    <id>com.daw48</id>
    <name>Keystroke Recorder</name>
    <version>0.1</version>
    <vendor email="daw48@aber.ac.uk">daw48</vendor>

    <description>
        <![CDATA[
        Keystroke Recorder
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        0.1:
        <ul>
          <li>Initial Keystroke Recorder implementation</li>
        </ul>
        ]]>
    </change-notes>

    <idea-version since-build="173.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.daw48.Settings"/>
    </extensions>

    <actions>
        <group id="KSR.Main" text="Keystroke Recorder"
               description="Keystroke Recorder">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="KSR.Settings" class="com.daw48.SettingsAction"
                    text="Settings"
                    description="Keystroke Recorder Settings"/>
        </group>
    </actions>

    <project-components>
        <component>
            <implementation-class>com.daw48.DocumentChangeTracker
            </implementation-class>
            <interface-class>com.daw48.DocumentChangeTracker</interface-class>
        </component>
    </project-components>
</idea-plugin>
