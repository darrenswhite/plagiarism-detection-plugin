<idea-plugin>
    <id>com.daw48</id>
    <name>Plagiarism Detection</name>
    <version>0.1</version>
    <vendor email="daw48@aber.ac.uk">daw48</vendor>

    <description>
        <![CDATA[
        Plagiarism Detection
        ]]>
    </description>

    <change-notes>
        <![CDATA[
        0.1:
        <ul>
          <li>Initial implementation</li>
        </ul>
        ]]>
    </change-notes>

    <idea-version since-build="173.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.daw48.settings.Settings"/>
        <projectService
                serviceImplementation="com.daw48.ProjectTracker"/>
    </extensions>

    <actions>
        <group id="PlagiarismDetection.Main" text="Plagiarism Detection"
               description="Plagiarism Detection">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Plagiarism Detection.Settings"
                    class="com.daw48.settings.SettingsAction"
                    text="Settings"
                    description="Plagiarism Detection Settings"/>
        </group>
    </actions>

    <project-components>
        <component>
            <implementation-class>com.daw48.ProjectDocumentListener
            </implementation-class>
        </component>
    </project-components>
</idea-plugin>
